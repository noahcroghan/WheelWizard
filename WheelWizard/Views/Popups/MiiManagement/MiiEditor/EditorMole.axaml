<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500"
             xmlns:components="clr-namespace:WheelWizard.Views.Components"
             xmlns:lang="clr-namespace:WheelWizard.Resources.Languages"
             x:Class="WheelWizard.Views.Popups.MiiManagement.MiiEditor.EditorMole">
    <!-- FOR EVERY EDITOR PAGE -->
    <Grid RowDefinitions="40,*">
        <!-- Updated Title -->
        <TextBlock Classes="BodyText" Margin="10" Text="Mole" HorizontalAlignment="Right" />
        <Border Grid.Row="0" Background="{StaticResource BackgroundLineColor}"
                HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="1"/>
        <components:IconLabelButton Grid.Row="0" Text="{x:Static lang:Common.Action_Back}" IconData="{StaticResource ArrowLeft}"
                                    Click="BackButton_OnClick" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0"
                                    Foreground="{StaticResource TitleTextColor}" FontSize="16"
                                    HoverForeground="{StaticResource Primary200}"/>

        <!-- END OF EVERY EDITOR PAGE -->

        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Spacing="15">
                <!-- The list of elements you want to edit in this page -->

                <!-- Enable/Disable Mole -->
                <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <CheckBox
                        x:Name="MoleEnabledCheck"
                        IsCheckedChanged="MoleEnabledCheck_OnIsCheckedChanged"
                        VerticalAlignment="Center"
                        />
                    <components:FormFieldLabel Text="Enable Mole?" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Controls Group - Only enabled when Mole is checked -->
                <StackPanel x:Name="MoleControlsPanel">

                    <!-- Vertical Position (Up/Down) -->
                    <StackPanel Margin="0,10,0,0"> <!-- Add margin -->
                        <components:FormFieldLabel Text="Vertical Position (Up/Down):"/>
                        <Border Background="{StaticResource Neutral950}" CornerRadius="6" Padding="2" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                                <components:Button x:Name="VerticalDecreaseButton" IconData="{StaticResource MinMark}" IconSize="14" Padding="4" Click="VerticalDecrease_Click"/>
                                <TextBlock x:Name="VerticalValueText" Classes="BodyText" MinWidth="30" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                                <components:Button x:Name="VerticalIncreaseButton" IconData="{StaticResource  PlusMark}" IconSize="14" Padding="4" Click="VerticalIncrease_Click"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Horizontal Position (Left/Right) -->
                    <StackPanel Margin="0,10,0,0"> <!-- Add margin -->
                        <components:FormFieldLabel Text="Horizontal Position (Left/Right):"/>
                        <Border Background="{StaticResource Neutral950}" CornerRadius="6" Padding="2" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                                <components:Button x:Name="HorizontalDecreaseButton" IconData="{StaticResource MinMark}" IconSize="14" Padding="4" Click="HorizontalDecrease_Click"/>
                                <TextBlock x:Name="HorizontalValueText" Classes="BodyText" MinWidth="30" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                                <components:Button x:Name="HorizontalIncreaseButton" IconData="{StaticResource  PlusMark}" IconSize="14" Padding="4" Click="HorizontalIncrease_Click"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Size (Zoom In/Out) -->
                    <StackPanel Margin="0,10,0,0"> <!-- Add margin -->
                        <components:FormFieldLabel Text="Size:"/>
                        <Border Background="{StaticResource Neutral950}" CornerRadius="6" Padding="2" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                                <components:Button x:Name="SizeDecreaseButton" IconData="{StaticResource MinMark}" IconSize="14" Padding="4" Click="SizeDecrease_Click"/>
                                <TextBlock x:Name="SizeValueText" Classes="BodyText" MinWidth="30" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                                <components:Button x:Name="SizeIncreaseButton" IconData="{StaticResource  PlusMark}" IconSize="14" Padding="4" Click="SizeIncrease_Click"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel> <!-- End MoleControlsPanel -->

            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>